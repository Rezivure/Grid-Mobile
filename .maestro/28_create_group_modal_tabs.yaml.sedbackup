appId: app.mygrid.grid
---

# Start with fresh login
- runFlow: flows/login_testuser1.yaml

# Test: Verify Add Contact modal has both Add Contact and Create Group tabs
# Prerequisite: testuser1 logged in on map screen

- launchApp
- waitForAnimationToEnd
- extendedWaitUntil:
    visible: "My Contacts"
    timeout: 10000

# Tap the person-add icon
- tapOn:
    point: "60%,62%"
- waitForAnimationToEnd

# Should see Add Contact modal with tab options
- assertVisible: "Add Contact"

# Switch to Create Group tab
- tapOn: "Create Group"
- waitForAnimationToEnd

# Verify Create Group form elements
- assertVisible: "Group Name"

# Switch back to Add Contact tab
- tapOn: "Add Contact"
- waitForAnimationToEnd

# Dismiss modal
- swipe:
    start: "50%,20%"
    end: "50%,90%"
    duration: 500
- waitForAnimationToEnd

# Verify back on map screen
- extendedWaitUntil:
    visible: "My Contacts"
    timeout: 10000
