appId: app.mygrid.grid
---

# Start with fresh login
- runFlow: flows/login_testuser1.yaml

# Test: Attempt to create group without adding members
# Prerequisite: testuser1 logged in on map screen

- launchApp
- waitForAnimationToEnd
- extendedWaitUntil:
    visible: "My Contacts"
    timeout: 10000

# Tap the person-add icon
- tapOn:
    point: "60%,62%"
- waitForAnimationToEnd

# Switch to Create Group tab
- tapOn: "Create Group"
- waitForAnimationToEnd

# Enter group name but no members
- tapOn: "Group Name"
- inputText: "EmptyGroup"
- waitForAnimationToEnd
- hideKeyboard
- waitForAnimationToEnd

# Try to create (should fail or show validation)
- tapOn: "Create Group"
- waitForAnimationToEnd

# Should still be on Create Group (can't create without members)
- assertVisible: "Group Name"

# Dismiss modal
- swipe:
    start: "50%,20%"
    end: "50%,90%"
    duration: 500
- waitForAnimationToEnd

# Verify back on map screen
- extendedWaitUntil:
    visible: "My Contacts"
    timeout: 10000
